@model List<BlogDataModelOnMac>
@{

    
    ViewData["Title"] = "Blog";
    int count = 0;

}

<div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Action</th>
                <th scope="col">No</th>
                <th scope="col">Author</th>
                <th scope="col">Title</th>
                <th scope="col">Content</th>
            </tr>
        </thead>
        <tbody>
            @foreach (BlogDataModelOnMac item in Model)
{
<tr>
    <th scope="row" >
        <a class="btn btn-warning" role="button" href="/Blog/Edit/@item.BlogId">Edit</a>
        <a class="btn btn-danger" role="button" href="/Blog/Delete/@item.BlogId">Delete</a>
    </th>
    <td>@(++count)</td>
    <td>@item.BlogAuthor</td>
    <td>@item.BlogTitle</td>
    <td>@item.BlogContent</td>
</tr>
}
            
        </tbody>
    </table>
</div>